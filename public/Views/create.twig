<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Create</title>
    <link rel="stylesheet" href="/Views/css/bootstrap.css"/>
</head>

<body>
{%include "header.twig" %}
<div class="container mt-5">
    <div class="row">
<form action="/article/create" method="POST" onsubmit="return validateForm()" enctype="multipart/form-data">
    <div class="form-group">
        <label class="h5 row" for="title">Title:</label>
        <input class="row" type="text"  id="title" name="title" placeholder="Enter title">
    </div>
        <label class="h5 row" for="content" >Content:</label>
        <textarea
                class="row"
                id="content"
                name="content"
                placeholder="Enter text"
                rows="10"
                cols="75">
        </textarea>
<div class="container">
    <div class="row mt-2  w-100">

        <div class="col">
        <label  class="h5" for="image">Image:</label>
        <input type="file"  id="image" name="image" >
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary" >Submit</button>
        </div>
    </div>
</div>

</form>
    </div>
</div>
<script>
    function validateForm() {
        let title = document.getElementById("title").value;
        let content = document.getElementById("content").value;
        if (title.trim() === "" || content.trim() === "") {
            alert("Title and content are required fields.");
            return false;
        }

        return true;
    }
</script>
<script src="/Views/js/bootstrap.bundle.js"></script>
</body>

</html>